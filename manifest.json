{
  "manifest_version": 3,
  "name": "Tasks Theme",
  "version": "1.0.0",
  "description": "테마를 적용해버리겠다 으하하",
  "permissions": [
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://fullscreen-for-googletasks.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon_48.png",
    "96": "icons/icon_96.png",
    "128": "icons/icon_128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
